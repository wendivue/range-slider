{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "paths": {
      "Components/*": ["components/*"],
      "Helpers/*": ["ts/helpers/*"],
      "Ts/*": ["ts/*"],
      "UI/*": ["ts/View/UI/*"]
    }
  }
}
